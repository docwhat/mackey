#!/bin/bash

set -eu

function show_help
{
  echo "Usage: $0 [options]"
  echo
  echo "Installs gems needed for mackey in a private directory using the"
  echo "system ruby."
  echo
  echo "Options:"
  echo "  -d --development   Install gems needed for development"
}

development_mode=f
while [ $# -gt 0 ]; do
  case "$1" in
  -h|--h|--help)
    show_help
    exit 0
    ;;
  -d|--d|--development)
    development_mode=t
    ;;
  -*)
    echo "ERROR: Unknown flag $1" 1>&2
    show_help
    exit 1
    ;;
  *)
    echo "ERROR: Unknown argument $0" 1>&2
    show_help
    exit 1
    ;;
  esac
  shift
done

cd "$(dirname "$0")"

export GEM_HOME="${PWD}/build-deps"
unset GEM_PATH

if [ ! -x "${PWD}/bin/bundle" ]; then
  /usr/bin/gem install \
    --no-document\
    --bindir "${PWD}/bin" \
    bundler
fi

if [ "$development_mode" = t ]; then
  bundle_without=""
else
  bundle_without="development"
fi

"${PWD}/bin/bundle" install \
  --standalone \
  --clean \
  --binstubs=bin \
  --without="$bundle_without"

# EOF
